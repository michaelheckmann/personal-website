---
import geistSans400 from "@fontsource/geist-sans/files/geist-sans-latin-400-normal.woff2";
import inconsolata400 from "@fontsource/inconsolata/files/inconsolata-latin-400-normal.woff2";

import type { Locales } from "@/i18n/i18n-types";

import JsonLd from "./json-ld.astro";

interface Props {
  lang: Locales;
  title: string;
  description: string;
  image?: string;
  translationLinks?: { lang: string; href: string }[];
  blogPost?: {
    pubDate: Date;
    updatedDate?: Date;
    tags?: string[];
  };
  isIndex?: boolean;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteThemeColor = "#18181b";

const { lang, title, description, blogPost, isIndex } = Astro.props;
const image = Astro.props.image ?? "/og-image.jpg";

// Resolve image URL for meta tags
const imageUrl = new URL(image, Astro.url);

const { origin, pathname } = canonicalURL;
const rawPathname = pathname.split("/").filter(Boolean).slice(1).join("/");
const germanUrl = new URL(`/de/${rawPathname}`, origin);
const englishUrl = new URL(`/en/${rawPathname}`, origin);
const translationLinks = Astro.props.translationLinks ?? [
  { lang: "de", href: germanUrl },
  { lang: "en", href: englishUrl },
];

// Determine if this is a blog post or website for JSON-LD
const isBlogPost = !!blogPost;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="shortcut icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<meta name="apple-mobile-web-app-title" content="Michael" />
<link rel="manifest" href="/site.webmanifest" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
  rel="alternate"
  type="application/rss+xml"
  title="Michael Heckmann - RSS Feed German"
  href={new URL("rss-de.xml", Astro.site)}
/>
<link
  rel="alternate"
  type="application/rss+xml"
  title="Michael Heckmann - RSS Feed English"
  href={new URL("rss-en.xml", Astro.site)}
/>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Href Lang -->
{
  translationLinks.map(({ lang, href }) => (
    <link rel="alternate" href={href} hreflang={lang} />
  ))
}

<!-- Preload Fonts -->
<link
  rel="preload"
  as="font"
  type="font/woff2"
  href={geistSans400}
  crossorigin="anonymous"
/>
<link
  rel="preload"
  as="font"
  type="font/woff2"
  href={inconsolata400}
  crossorigin="anonymous"
/>

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Theme Color -->
<meta name="theme-color" content={siteThemeColor} />
<meta name="msapplication-navbutton-color" content={siteThemeColor} />
<meta name="apple-mobile-web-app-status-bar-style" content={siteThemeColor} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={isBlogPost ? "article" : "website"} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageUrl} />
{
  isBlogPost && (
    <>
      <meta
        property="article:published_time"
        content={blogPost.pubDate.toISOString()}
      />
      {blogPost.updatedDate && (
        <meta
          property="article:modified_time"
          content={blogPost.updatedDate.toISOString()}
        />
      )}
      {blogPost.tags?.map((tag) => (
        <meta property="article:tag" content={tag} />
      ))}
      <meta property="article:author" content="Michael Heckmann" />
    </>
  )
}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageUrl} />

<!-- JSON-LD Structured Data -->
{
  isBlogPost && (
    <JsonLd
      type="blog-post"
      lang={lang}
      title={title}
      description={description}
      image={image}
      pubDate={blogPost.pubDate}
      updatedDate={blogPost.updatedDate}
      tags={blogPost.tags}
      url={canonicalURL.toString()}
    />
  )
}
<!-- Only show this on the root for better SEO -->
{isIndex && <JsonLd type="website" lang={lang} description={description} />}

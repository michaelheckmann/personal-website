---
interface Props {
  opacity?: string;
}
---

<svg
  class="pointer-events-none absolute inset-0"
  style="width: 100%; height: 100%;"
>
  <filter id="noiseFilter">
    <feTurbulence
      type="turbulence"
      baseFrequency="0.5"
      numOctaves="1"
      seed="1"
      result="noise"
    >
      <!-- <animate
      attributeName="seed"
      values="1;100;1"
      dur="30s"
      repeatCount="indefinite"></animate> -->
    </feTurbulence>
  </filter>
  <rect
    width="100%"
    height="100%"
    filter="url(#noiseFilter)"
    fill="black"
    opacity={Astro.props.opacity ?? "0.05"}></rect>
</svg>
